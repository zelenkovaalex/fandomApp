<div class="sessions" style="width: 100%;">
  <div class="A_sessions">
    <%- if controller_name != 'sessions' %>
      <%= link_to "уже есть аккауент?", new_session_path(resource_name) %><br />
    <% end %>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <%= link_to "присоединиться", new_registration_path(resource_name) %><br />
    <% end %>
  </div>
          
  <div class="A_sessions">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "не помню пароль", new_password_path(resource_name) %><br />
    <% end %>
  </div>

  <div class="A_sessions">
    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "не получили подтверждения?", new_confirmation_path(resource_name) %><br />
    <% end %>
  </div>

  <div class="A_sessions">
    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "не получили инструкции по разблокировке?", new_unlock_path(resource_name) %><br />
    <% end %>
  </div>

  <div class="A_sessions">
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= button_to "присоединиться с #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
      <% end %>
    <% end %>
  </div>

</div>