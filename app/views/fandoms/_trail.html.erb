<div class="trail">
  <h2><%= trail.title %></h2>
  <h3><%= trail.fandom.name %></h3>
  <p><% trail.body %></p>

  <% if current_user.id == trail.user_id %>
    <div class='butts'>
      <%= render partial: "like/button", locals: {likeable: trail} %>
      <%= link_to 'редактировать', edit_admin_trail_path(trail) %>
      <%= button_to 'удалить', admin_trail_path(trail.id), method: :delete %>
      <%= link_to 'посмотреть', trail_path(trail) %>
    </div>
  <% else %>
    <%= link_to 'посмотреть', trail_path(trail) %>
  <% end %>

</div>