<div id="<%= dom_id profile %>" class="M_profileInf">

  <%= image_tag profile.avatar.url if profile.avatar.present? %>

  <h1><%= profile.nickname %></h1>

  <div class="M_profileTags">
    <p><%= profile.city %></p>
    <% if !profile.fandoms.empty? %>
      <ul>
        <% profile.fandoms.each do |fandom| %>
          <li><%= fandom.name %></li>
        <% end %>
      </ul>
    <% else %>
      <p>Не состоит ни в одном фандоме.</p>
    <% end %>
    <p><%# fandom = Fandom.all.where(id: profile.fandom_id).first %></p>
  </div>
  
  <p><%= profile.bio %></p>

  <div class="W_buttons">
    <% if profile && current_user && (current_user.admin? || current_user.id == profile.user_id) %>
      <%= link_to "редактировать", edit_profile_path(profile) %>
      <%= button_to "удалить", profile, method: :delete %>
    <% end %>
  </div> 

    <%= link_to "вернуться", profiles_path %>
  </div>
</div>
