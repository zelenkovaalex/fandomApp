<div id="<%= dom_id profile %>" class="M_profileInf">

  <% if profile.avatar.present? %>
    <%= image_tag profile.avatar.url, alt: "A_avatar" %>
  <% else %>
    <p>No avatar available</p>
  <% end %>

  <h1><%= link_to profile.nickname, profile_path(profile), class: "profile-nickname" %></h1>

  <div class="M_profileTags">
    <p><%= profile.city %></p>
    <p><%= Fandom.find_by(id: profile.fandom_id)&.name || "No Fandom" %></p>
  </div>

  <p><%= profile.bio %></p>

  <div class="W_buttons">
    <% if profile && current_user && (current_user.admin? || current_user.id == profile.user_id) %>
      <%= link_to "редактировать", edit_profile_path(profile) %>
      <button class="custom-delete-button" data-url="<%= profile_path(profile) %>">Удалить</button>
    <% end %>
  </div>

<%= link_to profile_path(profile), class: 'A_diagonal_arrow' do %>
  <%= image_tag 'atoms/A_go_button.png', alt: 'Посмотреть маршрут' %>
<% end %>

</div>

